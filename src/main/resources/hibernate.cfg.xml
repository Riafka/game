<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property> <!-- DB Driver -->
        <property name="connection.url">jdbc:mysql://localhost:3306/rpg?serverTimezone=UTC&amp;useSSL=false</property> <!-- BD Mane -->
        <property name="connection.username">root</property> <!-- DB User -->
        <property name="connection.password">root</property> <!-- DB Password -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property> <!-- DB Dialect -->
        <property name="hibernate.default_schema">rpg</property>
        <property name="hibernate.jdbc.time_zone">UTC</property>


    </session-factory>
</hibernate-configuration>